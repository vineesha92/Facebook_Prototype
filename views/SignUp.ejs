<!DOCTYPE html>
<html>
  <head>
  
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
   <body>
    <div ng-app="myApp" ng-controller="myCtrl" >
    
   <form name="signupForm">
    First Name : <input type ="text" name="user.fname" ng-model="user.fname"></input><br><br>
    Last Name : <input type ="text" name="user.lname" ng-model="user.lname"></input><br><br>
    Email Id : <input type ="email" name="user.email" ng-model="user.email"></input><br><br>
    Password : <input type ="password" name="user.password" ng-model="user.password"></input><br>
     <br><br><br>
     <input type="reset" value="Reset"></input>
    <input type="submit" value="Register" ng-click = "signupClick()"></input>    
   </form>
    
    </div>
    
    <script>
		var app = angular.module('myApp', []);
		app.controller('myCtrl', function($scope,$http) {
		
			$scope.signupClick= function(){
			
				console.log($scope.user);
				$http.post('/afterSignUp',$scope.user).
					then(function(response) {
			             console.log("inside http");
			          },function(response){
			          console.log(response);
			    	  });
			};
		});
	</script>
  </body>
</html>

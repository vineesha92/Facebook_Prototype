<html>
   <head>
      <title>FaceBook</title>
      <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
      <link rel='stylesheet' href='/stylesheets/homeStyle.css' />
      <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
      <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
      <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
   </head>
   <body>
      <div class="col-lg-12">
         <h1>
            <center> Welcome To Facebook </center>
         </h1>
      </div>
 <div ng-app="signUpApp" ng-controller="signUpController" style="background-color:#F5F5FF">
   <div class="col-sm-6">
  <form class="afterSignIn" >
    <!-- This panel is for login -->
    
    <div class="panel panel-primary">
      <!-- Default panel contents -->
        <div class="panel-heading">FaceBook Login</div>
        <div class="panel-body">
           <form class="form-horizontal" role="form">
               <div class="form-group  usernameDiv">
                  <label class="inputUsername" class="col-sm-2 control-label pull-left">User Name</label><br>
                  <div class="col-sm-10">
                    <input type="email" class="form-control " name="inputUsername" id="inputUsername" ng-model="user.inputUsername" placeholder="Enter your Email Id" required>
                  </div>
               </div>
              <div class="form-group  usernameDiv">
                <label for="inputPassword">Password</label>
                <div class="col-sm-10">
                  <input type="password" class="form-control " name="inputPassword" id="inputPassword" ng-model="user.inputPassword" placeholder="Enter your Password" required>
                </div>
              </div>
              
              <div class="form-group ">
                <div class="pull-left signIn">
                  <button type="submit" class="btn btn-primary" ng-click = "signinClick()">Log In</button>
                </div>
              </div>
           </form>
        </div>     
     </div>
 </form>
 </div>

<div class="col-sm-6">
         
            <form class="afterSignIn">
               <!-- This panel is for login -->
               <div class="panel panel-primary">
                  <!-- Default panel contents -->
                  <div class="panel-heading">SignUp For FaceBook</div>
                  <div class="panel-body">
            <form class="form-horizontal" role="form">
            <div class="form-group  usernameDiv">
            <label class="inputUsername" class="col-sm-2 control-label pull-left">First Name</label>
            <div class="col-sm-10">
            <input type="text" class="form-control " name="user.fname" id="user.fname" ng-model="user.fname" placeholder="Enter your FirstName" required>
            </div>
            </div>
            <div class="form-group  usernameDiv">
            <label class="inputUsername" class="col-sm-2 control-label pull-left">Last Name</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" name="user.lname" id="user.lname" ng-model="user.lname" placeholder="Enter your LastName" required>
            </div>
            </div>
            <div class="form-group  usernameDiv">
            <label class="inputUsername" class="col-sm-2 control-label pull-left">Email Address  </label>
            <div class="col-sm-10">
            <input type="email" class="form-control " name="user.email" id="user.email" ng-model="user.email" placeholder="Enter your Email Address" required>
            </div>
            </div>
            <div class="form-group  usernameDiv">
            <label class="inputUsername" class="col-sm-2 control-label pull-left">Password</label>
            <div class="col-sm-10">
            <input type="password" class="form-control " name="user.password" id="user.password" ng-model="user.password" placeholder="Enter your Password" required><br>
            </div>
            </div>
            <div class="form-group ">
            <div class="pull-left signIn">
            <button type="reset" class="btn btn-primary">Reset</button>
            </div>
            <div class="pull-left signIn">
            <button type="submit" class="btn btn-primary" ng-click = "signupClick()">Sign Up</button>
            </div>
            </div>
            </form>
            </div>
            </div>
         </form>
      </div>
      </div>
      <script>
         var app2 = angular.module('signUpApp', []);
         app2.controller('signUpController', function($scope,$http) {
         	
	         	$scope.signupClick= function(){
	         		alert("Sucessfully Signed Up!!");
	         		$http.post('/afterSignUp',$scope.user).
	         			then(function(response) {
							window.location.href='/SignIn';  	             
	         	          },function(response){
	         	          	window.location.href='/SignIn';
	         	    	  });
	         	};
         	        	
				$scope.signinClick= function(){
					$http.post('/afterSignIn',$scope.user).
						then(function(response) {
				        $scope.name = response.data[0];
				             window.location.href= '/HomePage'; 
				             return false;
				          },function(response){
				          window.location.href='/SignIn';
				    	  });
				};
         });
      </script>
   </body>
</html>